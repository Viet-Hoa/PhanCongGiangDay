@using System.Collections
@using System.Globalization
@using System.Resources
@using Lib.Resources.Resources
@{
    Layout = null;
    // Get a set of resources appropriate to
    // the culture defined by the browser
    ResourceSet resourceSetAccountMessage = AccountMessage.ResourceManager.GetResourceSet(CultureInfo.CurrentUICulture, true, true);
    ResourceSet resourceSetEmailTemplate = EmailTemplate.ResourceManager.GetResourceSet(CultureInfo.CurrentUICulture, true, true);
    ResourceSet resourceSetNotifyMessage = NotifyMessage.ResourceManager.GetResourceSet(CultureInfo.CurrentUICulture, true, true);
    ResourceSet resourceSetSetting = Setting.ResourceManager.GetResourceSet(CultureInfo.CurrentUICulture, true, true);
    ResourceSet resourceSetStaticMessage = StaticMessage.ResourceManager.GetResourceSet(CultureInfo.CurrentUICulture, true, true);
    ResourceSet resourceSetValidationMessages = ValidationMessages.ResourceManager.GetResourceSet(CultureInfo.CurrentUICulture, true, true);
    ResourceSet resourceSetViewText = ViewText.ResourceManager.GetResourceSet(CultureInfo.CurrentUICulture, true, true);
}

// Define the empty object in javascript
var ViewText = {};
@foreach (DictionaryEntry res in resourceSetViewText)
{
    // Create a property on the javascript object for each text resource
    @:ViewText.@res.Key = "@Html.Raw(HttpUtility.JavaScriptStringEncode(res.Value.ToString()))";
}

