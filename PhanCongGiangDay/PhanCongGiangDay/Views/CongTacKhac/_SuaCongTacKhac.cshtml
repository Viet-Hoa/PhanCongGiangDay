@model Lib.CongTacKhac.Model.CongTacKhacModel
@using (Html.BeginForm("SuaCongTacKhac", "CongTacKhac", FormMethod.Post, new { id = "formSuaCongTacKhac" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.CongTacKhacID)
    <div class="modal-header">
        <h5 class="modal-title text-uppercase">Sửa công tác khác</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-12">
                <div class="row mb-2">
                    <div class="col-6">
                        <label class="font-weight-bold">Tên công tác khác</label><span class="input-required">*</span>
                    </div>
                    <div class="col-6">
                        @Html.TextBoxFor(x => x.TenCongTac, new { @class = "form-control" })
                        <small class="form-text text-danger">@Html.ValidationMessageFor(x => x.TenCongTac)</small>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-6">
                        <label class="font-weight-bold">Năm bắt đầu</label><span class="input-required">*</span>
                    </div>
                    <div class="col-6">
                        @Html.TextBoxFor(x => x.SoTiet, new { @class = "form-control" })
                        <small class="form-text text-danger">@Html.ValidationMessageFor(x => x.SoTiet)</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default text-uppercase pull-left" data-dismiss="modal">Huỷ</button>
        <button type="button" class="btn btn-danger text-uppercase pull-right" id="btn_suaCongTacKhac">Lưu</button>
    </div>
}
<script>
    $(function () {
        SuaCongTacKhacModule.init();
    });
</script>
