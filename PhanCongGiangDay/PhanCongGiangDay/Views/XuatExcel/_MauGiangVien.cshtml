@model List<PhanCongGiangDay.Models.ViewModel.XuatExcel.GiangVienCheckViewModel>
@using (Html.BeginForm("XuatExcelMauGiangVien", "XuatExcel", FormMethod.Post, new { id = "formGv" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <h5 class="modal-title text-uppercase">Chọn giảng viên</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-12" style="height:400px; overflow-y:scroll">
                <table class="table table-hover table-custom table-bordered">
                    <thead>
                        <tr>
                            <th>
                                <input type="checkbox" id="check-all" />
                            </th>
                            <th>
                                Giảng viên
                                <input id="BPC-hidden" type="hidden" name="BangPhanCongID" value="" />
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for(int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>
                                    @Html.CheckBoxFor(x=>x[i].check)
                                </td>
                                <td>
                                    @Model[i].GiangVien
                                    @Html.HiddenFor(x=>x[i].GiangVienID)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default text-uppercase pull-left" data-dismiss="modal">Huỷ</button>
        <button type="submit" class="btn btn-success text-uppercase pull-right"  id="btn_xuatGV">Xuất Excel</button>
    </div>
}
<script>
    $(function () {
        XuatExcelModule.MauGV();
    });
</script>
