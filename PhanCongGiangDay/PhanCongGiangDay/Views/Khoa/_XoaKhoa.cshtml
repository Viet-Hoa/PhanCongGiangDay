@model int
@using (Html.BeginForm("XoaKhoaConfirmed", "Khoa", FormMethod.Post, new { id = "formXoaKhoa" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("Khoaid", Model)
    <div class="modal-header">
        <h5 class="text-uppercase">Xoá thông tin khoá</h5>
        <button type="button" class="close" data-dismiss="modal"><i class="fa fa-times"></i></button>
    </div>
    <div class="modal-body">
        <div class="alert alert-danger" role="alert">
            Bạn có muốn xoá thông tin khoá?
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default text-uppercase pull-left" data-dismiss="modal">Huỷ</button>
        <button type="button" class="btn btn-danger text-uppercase pull-right" id="xoa-Khoa-btn" aria-hidden="true">Xoá</button>
    </div>
}
<script>
    $(function () {
        XoaKhoaModule.init();
    });
</script>