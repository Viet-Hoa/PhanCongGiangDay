@using PhanCongGiangDay.UtilityHelpers
@{
    ViewBag.Title = "lớp";
}
@Html.Hidden("role",AccountUtils.CurrentUserLv())
<h3 class="text-uppercase pt-3">Lớp</h3>
<div id="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-9">
                <div class="search-box">
                    @Html.TextBox("Lop-search", null, new { @class = "form-control", @maxlength = "20" })
                    <button type="button" class="search-button"><i class="material-icons">search</i></button>
                </div>
            </div>
            <div class="col-3 text-right">
                <a id="btnThemLop" href="#" class="btn btn-primary" data-trigger="modal" data-target="#modal" data-url="@Url.Action("ThemLop", "Lop")"><i class="fa fa-plus btn-icon-word-size"></i>Thêm lớp</a>
            </div>
        </div>
        <div class="row">
            <div id="lop-container" style="width: 100%">
                <table class="table table-hover table-bordered table-custom pl-0 pr-0" cellspacing="0" id="lop-table" style="width: 100%">
                    <thead class="thead-default">
                        <tr>
                            <td>STT</td>
                            <td>Mã lớp</td>
                            <td>Giảng viên hướng dẫn</td>
                            <td>Khoá</td>
                            <td style="min-width:140px; max-width:200px"></td>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/lop")
    <script>
        $(function () {
            LopModule.timKiem();
        });
    </script>

}
