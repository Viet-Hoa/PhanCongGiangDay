@using PhanCongGiangDay.UtilityHelpers
@model List<PhanCongGiangDay.Models.ViewModel.PhanCongGiangVien.PhanCongGiangVienViewModel>
@{
    ViewBag.Title = "PHÂN CÔNG GIẢNG VIÊN - PHÂN CÔNG";
}
@Html.Hidden("role", AccountUtils.CurrentUserLv())
<input type="hidden" id="bangpc" value="@ViewBag.namhocID" />
<div class="row">
    <div class="col-9">
        <h3 class="text-uppercase pt-3">PHÂN CÔNG GIẢNG VIÊN > <a style="color: #1565c0" href="@Url.Action("Index","PhanCongGiangVien")">NĂM HỌC @ViewBag.namhoctext</a></h3>
    </div>
    <div class="col-1 pt-3">
        <span class="font-weight-bold float-right">HIỂN THỊ:</span>
    </div>
    <div class="col-2 pt-2">
        @Html.DropDownList("hienthiddl", (SelectList)ViewBag.hienthi, new { @class = "form-control " })
    </div>
</div>
<div id="main-content">
    <div id="gv_area" class="container-fluid d-none">
        <div class="row">
            <div class="col-9">
                <div class="search-box">
                    @Html.TextBox("PhanCongGiangVien-search", null, new { @class = "form-control", @maxlength = "20" })
                    <button type="button" class="search-button"><i class="material-icons">search</i></button>
                </div>
            </div>
            <div class="col-3">
                @Html.DropDownList("Loc", (SelectList)ViewBag.loai, "-- Tất cả --", new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div id="PhanCongGiangVien-container" style="width: 100%">
                <table class="table table-hover table-bordered table-custom pl-0 pr-0" cellspacing="0" id="phanCongGiangVien-table" style="width: 100%">
                    <thead class="thead-default">
                        <tr>
                            <td>STT</td>
                            <td>Họ tên</td>
                            <td>Số tiết giảng dạy</td>
                            <td>Số tiết công tác</td>
                            <td>Số tiết thực tế</td>
                            <td style="min-width:100px; max-width:200px"></td>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <div id="nl_area" class="container-fluid">
        <div class="row">
            <div class="col-9">
                <div class="search-box">
                    @Html.TextBox("PhanCongNhomLop-search", null, new { @class = "form-control", @maxlength = "20" })
                    <button type="button" class="search-button"><i class="material-icons">search</i></button>
                </div>
            </div>
            <div class="col-3">
                <label class="d-inline-block" for="BoMonID">Bộ môn: &nbsp;</label> @Html.DropDownList("BoMonID", (SelectList)ViewBag.bomon, "-- Tất cả --", new { @class = "form-control d-inline-block", style="width:78%" })
            </div>
        </div>
        <div class="row">
            <div id="PhanCongNhomLop-container" style="width: 100%">
                <table class="table table-hover table-bordered table-custom pl-0 pr-0" cellspacing="0" id="phanCongNhomLop-table" style="width: 100%">
                    <thead class="thead-default">
                        <tr>
                            <td>STT</td>
                            <td>Mã học phần</td>
                            <td>Tên học phần</td>
                            <td>Số lượng nhóm lớp LT</td>
                            <td>Số lượng nhóm lớp TH</td>
                            <td>LT còn lại</td>
                            <td>TH còn lại</td>
                            <td style="min-width:100px; max-width:200px"></td>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalPhanCong" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-phancong-custom">
        <div class="modal-content">
        </div>
    </div>
</div>

<style type="text/css">
    @@media (min-width: 1000px) {
        .modal-phancong-custom {
            max-width: 1200px;
            margin: 20px auto;
        }
    }
</style>
@section Scripts
{
    @Scripts.Render("~/bundles/pcgv")
    <script>
        $(function () {
            PhanCongGiangVienModule.init();
            PhanCongGiangVienModule.timKiem();
            PhanCongGiangVienModule.timKiemNL();
            PhanCongGiangVienModule.displayPC();
        });
    </script>

}


