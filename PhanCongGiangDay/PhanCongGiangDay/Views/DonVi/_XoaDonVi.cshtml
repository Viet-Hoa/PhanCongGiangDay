@model int
@using (Html.BeginForm("XoaDonViConfirmed", "DonVi", FormMethod.Post, new { id = "formXoaDonVi" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("DonViid", Model)
    <div class="modal-header">
        <h5 class="text-uppercase">Xoá thông tin đơn vị</h5>
        <button type="button" class="close" data-dismiss="modal"><i class="fa fa-times"></i></button>
    </div>
    <div class="modal-body">
        <div class="alert alert-danger" role="alert">
            Bạn có muốn xoá thông tin đơn vị?
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default text-uppercase pull-left" data-dismiss="modal">Huỷ</button>
        <button type="button" class="btn btn-danger text-uppercase pull-right" id="xoa-DonVi-btn" aria-hidden="true">Lưu</button>
    </div>
}
<script>
    $(function () {
        XoaDonViModule.init();
    });
</script>