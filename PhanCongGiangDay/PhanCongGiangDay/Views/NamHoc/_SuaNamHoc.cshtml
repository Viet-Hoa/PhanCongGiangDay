@model Lib.NamHoc.Model.NamHocModel
@using (Html.BeginForm("SuaNamHoc", "NamHoc", FormMethod.Post, new { id = "formSuaNamHoc" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.BangPhanCongID)
    <div class="modal-header">
        <h5 class="modal-title text-uppercase">Sửa năm học</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-12">
                <div class="row mb-2">
                    <div class="col-6">
                        <label class="font-weight-bold">Năm học</label><span class="input-required">*</span>
                    </div>
                    <div class="col-6">
                        @Html.DropDownListFor(x => x.NamHoc, (SelectList)ViewBag.year, new { @class = "form-control" })
                        <small class="form-text text-danger">@Html.ValidationMessageFor(x => x.NamHoc)</small>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-6">
                        <label class="font-weight-bold">Trạng thái</label><span class="input-required">*</span>
                    </div>
                    <div class="col-6">
                        @Html.DropDownListFor(x => x.TrangThai,(SelectList)ViewBag.active, new { @class = "form-control" })
                        <small class="form-text text-danger">@Html.ValidationMessageFor(x => x.TrangThai)</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default text-uppercase pull-left" data-dismiss="modal">Huỷ</button>
        <button type="button" class="btn btn-danger text-uppercase pull-right" id="btn_suaNamHoc">Lưu</button>
    </div>
}
<script>
    $(function () {
        SuaNamHocModule.init();
    });
</script>
