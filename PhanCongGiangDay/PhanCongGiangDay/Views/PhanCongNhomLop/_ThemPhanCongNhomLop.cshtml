@model Lib.PhanCongNhomLop.Model.PhanCongNhomLopModel

@Html.DropDownList("tsotietltddl", (SelectList)ViewBag.hocphanlt, null, new { @class = "d-none" })
@Html.DropDownList("tsotietthddl", (SelectList)ViewBag.hocphanth, null, new { @class = "d-none" })
@Html.DropDownList("tsotinchiddl", (SelectList)ViewBag.hocphantc, null, new { @class = "d-none" })
@Html.DropDownList("tsotietddl", (SelectList)ViewBag.hocphanst, null, new { @class = "d-none" })
@Html.DropDownList("tbomonddl", (SelectList)ViewBag.bomont, null, new { @class = "d-none" })


<div class="col-12 p-3" id="Them_panel" style="border: 1px solid rgba(0, 0, 0, 0.125); border-radius: 0.5rem;margin:auto">
    @using (Html.BeginForm("ThemPhanCongNhomLop", "PhanCongNhomLop", FormMethod.Post, new { id = "formThemPhanCongNhomLop" }))
    {
        @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-2">
            <div class="row">
                <div class="col-12">
                    <label class="font-weight-bold">Học phần</label><span class="input-required">*</span>
                </div>
                <div class="col-12">
                    @Html.DropDownListFor(x => x.HocPhanLogID, (SelectList)ViewBag.hocphanddl, "-- Chọn --", new { @class = "form-control hocphansl2t", id = "tHocPhanLogID" })
                    <small class="form-text text-danger">@Html.ValidationMessageFor(x => x.HocPhanLogID)</small>
                </div>
            </div>
        </div>
        <div class="col-2">
            <div class="col-12">
                <label class="font-weight-bold">Bộ môn</label>
            </div>
            <div class="col-12">
                @Html.TextBox("tBoMon", null, new { @class = "form-control", @readonly = true })
            </div>
        </div>
        <div class="col-8">
            <div class="row">
                <div class="col">
                    <div class="col-12">
                        <label class="font-weight-bold">Số tín chỉ</label>
                    </div>
                    <div class="col-12">
                        @Html.TextBox("tSoTinChi", null, new { @class = "form-control", @readonly = true })
                    </div>
                </div>
                <div class="col">
                    <div class="col-12">
                        <label class="font-weight-bold">Số tiết HP</label>
                    </div>
                    <div class="col-12">
                        @Html.TextBox("tSoTiet", null, new { @class = "form-control", @readonly = true })
                    </div>
                </div>
                <div class="col">
                    <div class="row">
                        <div class="col-12">
                            <label class="font-weight-bold">SLSV 1 lớp</label><span class="input-required">*</span>
                        </div>
                        <div class="col-12">
                            @Html.TextBoxFor(x => x.SLSVNhomLop, new { @class = "form-control", onkeypress = "validateUnsignedInt(event)", max = "100", id = "tSLSVNhomLop" })
                            <small class="form-text text-danger">@Html.ValidationMessageFor(x => x.SLSVNhomLop)</small>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="row">
                        <div class="col-12">
                            <label class="font-weight-bold">SL nhóm lớp LT</label><span class="input-required">*</span>
                        </div>
                        <div class="col-12">
                            @Html.TextBoxFor(x => x.SoLuongNhomLopLT, new { @class = "form-control", onkeypress = "validateUnsignedInt(event)", max = "100", id = "tSoLuongNhomLopLT" })
                            <small class="form-text text-danger">@Html.ValidationMessageFor(x => x.SoLuongNhomLopLT)</small>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="row">
                        <div class="col-12">
                            <label class="font-weight-bold">SL nhóm lớp TH</label><span class="input-required">*</span>
                        </div>
                        <div class="col-12">
                            @Html.TextBoxFor(x => x.SoLuongNhomLopTH, new { @class = "form-control", onkeypress = "validateUnsignedInt(event)", max = "100", id = "tSoLuongNhomLopTH" })
                            <small class="form-text text-danger">@Html.ValidationMessageFor(x => x.SoLuongNhomLopTH)</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <input type="hidden" name="BangPhanCongID" value="@ViewBag.bangpcIDvb" />
        <input type="hidden" name="KhoaID" value="@ViewBag.khoaidvb" />
        <input type="hidden" name="TenHocPhan" value="" id="tenhpfor-em" />
    </div>
    <div class="row">
        <div class="col-12">
            @ViewBag.sv
        </div>
    </div>
        <div class="row pt-2">
            <div class="col-12">
                <button type="button" class="btn btn-default text-uppercase pull-left" id="btn_hide">Đóng</button>
                <button type="button" class="btn btn-danger text-uppercase pull-right" id="btn_themPhanCongNhomLop">Thêm</button>
            </div>
        </div>
    }
</div>


<script>
    $(function () {
        ThemPhanCongNhomLopModule.init();
    });
</script>
