@model List<Lib.Khoa.Model.KhoaModel>
@{
    ViewBag.Title = "PHÂN CÔNG NHÓM LỚP - KHOÁ";
}

<h3 class="text-uppercase pt-3">PHÂN CÔNG NHÓM LỚP > <a style="color: #1565c0" href="@Url.Action("Index","PhanCongNhomLop")">NĂM HỌC @ViewBag.namhoc</a> > KHOÁ</h3>
<div id="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                @foreach (var item in Model)
                {
                    <div class="box_home_app card-hover" title="@item.TenKhoa">
                        <a href="@Url.Action("PhanCong","PhanCongNhomLop",new { NamHoc=ViewBag.namhocID, Khoa=item.KhoaID})">
                            <div class="box_home_app_header">
                                <h4>Khoá @item.TenKhoa</h4>
                                <h5>(@item.SLSV SV)</h5>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

