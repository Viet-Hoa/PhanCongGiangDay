@using PhanCongGiangDay.UtilityHelpers
@{
    ViewBag.Title = "BỘ MÔN";
}
@Html.Hidden("role",AccountUtils.CurrentUserLv())
<h3 class="text-uppercase pt-3">BỘ MÔN</h3>
<div id="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-9">
                <div class="search-box">
                    @Html.TextBox("BoMon-search", null, new { @class = "form-control", @maxlength = "20" })
                    <button type="button" class="search-button"><i class="material-icons">search</i></button>
                </div>
            </div>
            <div class="col-3 text-right">
                <a id="btnThemBoMon" href="#" class="btn btn-primary" data-trigger="modal" data-target="#modal" data-url="@Url.Action("ThemBoMon", "BoMon")"><i class="fa fa-plus btn-icon-word-size"></i>Thêm bộ môn</a>
            </div>
        </div>
        <div class="row">
            <div id="bo-mon-container" style="width: 100%">
                <table class="table table-hover table-bordered table-custom pl-0 pr-0" cellspacing="0" id="bo-mon-table" style="width: 100%">
                    <thead class="thead-default">
                        <tr>
                            <td>STT</td>
                            <td>Mã bộ môn</td>
                            <td>Tên bộ môn</td>
                            <td>Tên khoa - đơn vị</td>
                            <td style="min-width:140px; max-width:200px"></td>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/bomon")
    <script>
        $(function () {
            BoMonModule.timKiem();
        });
    </script>

}
